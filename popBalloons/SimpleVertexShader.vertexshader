#version 330 core
layout(location = 0) in vec3 vertexPosition_modelspace;
layout(location = 1) in vec4 vertexColor; // Assuming you have color data per vertex now

uniform mat4 MVP; // Model-View-Projection matrix if needed, this can be a uniform

out vec4 fragmentColor;

void main() {
    gl_Position = MVP * vec4(vertexPosition_modelspace, 1.0); 
    fragmentColor = vertexColor;
}